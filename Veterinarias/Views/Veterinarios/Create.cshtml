@model Veterinarias.Modelos.Veterinarios

<div class="ibox-content">
    <div class="row">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col col-sm-12">
                <div class="form-group">
                    <div class="input-text">
                        <label asp-for="TipoDocumento" class="control-label"></label>
                        <select asp-for="TipoDocumento" class="form-control" asp-items="ViewBag.TipoDocumento" id="comb"></select>
                        <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                    </div>
                    <div class="input-text">
                        <label asp-for="NumeroDocumento" class="control-label"></label>
                        <input asp-for="NumeroDocumento" class="form-control" required />
                        <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                    </div>
                    <div class="input-text">
                        <label asp-for="Nombres" class="control-label"></label>
                        <input asp-for="Nombres" class="form-control" required />
                        <span asp-validation-for="Nombres" class="text-danger"></span>
                    </div>
                    <div class="input text">
                        <label asp-for="FotoIFormFile" class="control-label">Foto</label>
                        <input asp-for="FotoIFormFile" class="form-control" type="file" accept="image/png, image/jpeg">
                        <span asp-validation-for="FotoIFormFile" class="text-danger"></span>
                    </div>
                    <div class="input-text">
                        <label asp-for="FechaNacimiento" class="control-label">Fecha nacimiento</label>
                        <input asp-for="FechaNacimiento" class="form-control" type="date" required />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>
                    <div class="input-text">
                        <label asp-for="Sexo" class="control-label"></label>
                        <select asp-for="Sexo" class="form-control" asp-items="ViewBag.TipoSexo" id="comb"></select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                    <div class="input-text">
                        <label asp-for="Colegio" class="control-label">Colegio</label>
                        <input asp-for="Colegio" class="form-control" required />
                        <span asp-validation-for="Colegio" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col col-sm-12 text-right">
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>