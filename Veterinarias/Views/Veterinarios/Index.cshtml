<div class="mail-box">
    <h2>Veterinarios</h2>
    <form asp-action="Index">
        <div class="row">
            <div class="form-group col-md-4">
                <label for="tipoDoc">Tipo Documento</label>
                <select id="mySelect" class="form-control" asp-items="ViewBag.TipoDocumento" name="TipoDocumento"></select>
            </div>
            <div class="form-group col-md-4">
                <label for="sexo">Género</label>
                <select id="mySelect" class="form-control" asp-items="ViewBag.TipoSexo" name="Sexo"></select>
            </div>
            <div class="form-group col-md-4">
                <input type="submit" class="btn btn-success" value="Aplicar Filtros" />
                <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
            </div>
        </div>
    </form>
    <br />
    <p>
        <a asp-action="Create" class="btn btn-primary add-dialog-window">Nuevo Registro</a>
    </p>
    <div class="table-responsive table-sm table-hover">
        <table id="example" class="table table-hover table-mail">
            <thead class="table-active">
                <tr>
                    <th>
                        Tip. Doc
                    </th>
                    <th>
                        Num. Docu
                    </th>
                    <th>
                        Nombres
                    </th>
                    <th>
                        Foto
                    </th>
                    <th>
                        Fecha nac
                    </th>
                    <th>
                        Edad
                    </th>
                    <th>
                        Sexo
                    </th>
                    <th>
                        Colegio
                    </th>
                    <th>
                        Estado
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoDocumento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroDocumento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombres)
                        </td>

                        <td>
                            @if (!string.IsNullOrEmpty(item.Foto))
                            {
                                <img src="@item.Foto" class="img-listado" alt="Foto del veterinario" />
                            }
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.FechaNacimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Edad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SexoDescripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Colegio)
                        </td>
                        <td>
                            @* @Html.DisplayFor(modelItem => item.Estado)*@
                            <span class="estado-badge @(item.Estado ? "badge-success" : "badge-danger")">
                                @(item.Estado ? "Activado" : "Anulado")
                            </span>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning edit-dialog-window">Editar</a>
                            @if (item.Estado)
                            {
                                <a data-id="@item.Id" class="btn btn-danger delete-dialog-window">Anular</a>
                            }
                            else
                            {
                                <a data-id="@item.Id" class="btn btn-success activar-dialog-window">Activar</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="Activar" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#3fb618;color:white;">
                <button data-dismiss="modal" class="close" type="button">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h2 class="modal-title">Activar</h2>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <h4>¿Estás seguro de activar al veterinario seleccionado?</h4>
                </div>
                <div id="responseActivar" class="text-right">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="Anular" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#da2213;color:white;">
                <button data-dismiss="modal" class="close" type="button">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h2 class="modal-title">Anular</h2>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <h4>¿Estás seguro de anular al veterinario seleccionado?</h4>
                </div>
                <div id="responseInactivar" class="text-right">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="AddModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="width:50%;">
        <div class="modal-content">
            <div class="modal-header" style="background-color:green;color:white;">
                <h5 class="modal-title" id="TittleCreatemodel">Crear Registro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="teeee">Please wait...</div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="EditModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="width:50%;">
        <div class="modal-content">
            <div class="modal-header" style="background-color:orange;color:white;">
                <h5 class="modal-title" id="TittleCreatemodel">Actualizar Registro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="teeee">Please wait...</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $("body").on("click", "a.delete-dialog-window", null, function (e) {
            var htmlContent = '<br /><button type="button" id="btnNo" class="btn btn-danger" style="background-color:#da2213;color:white;" data-dismiss="modal" aria-hidden="true">No</button>&nbsp&nbsp<a href="@Url.Action("Anular", "Veterinarios")/' + $(this).data('id') + '" class="btn btn-default">Sí</a>';
            $("#responseInactivar").html(htmlContent);
            $('#Anular').modal('show');
        });

        $("body").on("click", "a.activar-dialog-window", null, function (e) {
            var htmlContent = '<br /><button type="button" id="btnNoActivar" class="btn btn-danger" style="background-color:#da2213;color:white;" data-dismiss="modal" aria-hidden="true">No</button>&nbsp&nbsp<a href="@Url.Action("Activar", "Veterinarios")/' + $(this).data('id') + '" class="btn btn-success">Sí</a>';
            $("#responseActivar").html(htmlContent);
            $('#Activar').modal('show');
        });

        if ('@ViewBag.Sexo' != '') {
            $('#Sexo').val('@ViewBag.Sexo')
        }
    </script>

    <script>
        //PARA ABRIR UNA VENTANA CREATE
        $("body").on("click", "a.add-dialog-window", null, function (e) {
            e.preventDefault();
            var $link = $(this);
            var url = $(this).attr('href');
            if (url.indexOf('#') == 0) {
                $('#AddModal').modal('show');
            }
            else {
                $.get(url, function (data) {
                    $('#AddModal .teeee').html(data);
                    $('#AddModal').modal('show');
                });
            }
        });
    </script>

    <script>
        //PARA ABRIR UNA VENTANA EDIT
        $("body").on("click", "a.edit-dialog-window", null, function (e) {
            e.preventDefault();
            //debugger;
            var $link = $(this);
            var url = $(this).attr('href');
            if (url.indexOf('#') == 0) {
                $('#EditModal').modal('show');
            }
            else {
                $.get(url, function (data) {
                    $('#EditModal .teeee').html(data);
                    $('#EditModal').modal('show');
                });
            }
        });
    </script>

    @*PARA DATATABLES*@
    <script>
        $(document).ready(function () {
            //ESTE ES PARA EL DATATABLES
            $('#example').DataTable({
                language: {
                    search: "Buscar: ",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ elementos",
                    infoFiltered: "(filtrado de _MAX_ registros en total)",
                    paginate: {
                        first: "Primero",
                        previous: "<",
                        next: ">",
                        last: "Último"
                    }
                },
                "order": [[0, "asc"]],
                stateSave: true,
                dom: 'Bfrtip',
                buttons: [
                    'excelHtml5',
                    'pdfHtml5'
                ]
            });
        });
    </script>
    }