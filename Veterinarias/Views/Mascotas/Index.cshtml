    <script>
        $("body").on("click", "a.add-dialog-window", null, function (e) {
            e.preventDefault();
            var $link = $(this);
            var url = $(this).attr('href');
            if (url.indexOf('#') == 0) {
                $('#AddModal').modal('show');
            }
            else {
                $.get(url, function (data) {
                    $('#AddModal .teeee').html(data);
                    $('#AddModal').modal('show');
                });
            }
        });
    </script>
    <script>
