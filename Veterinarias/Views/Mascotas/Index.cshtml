@model IEnumerable<Veterinarias.Modelos.PR_MASCOTAS_MG01>

<div class="mail-box">

    <h2>Mascotas</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary add-dialog-window">Nuevo Registro</a>
    </p>
    <div class="table-responsive table-sm table-hover">

        <table id="example" class="table table-hover table-mail">
            <thead class="table-active">
                <tr>
                    <th>
                        Animal
                    </th>
                    <th>
                        Raza
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Fec. Nacimiento
                    </th>
                    <th>
                        Edad
                    </th>
                    <th>
                        Color
                    </th>
                    <th>
                        Foto
                    </th>
                    <th>
                        Dueño
                    </th>
                    <th>
                        Estado
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreAnimal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreRaza)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaNacimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Edad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Foto))
                            {
                                <img src="@item.SrcFoto" width="100px" />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreDueño)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning edit-dialog-window">Editar</a>
                           @*<a asp-action="Update" asp-route-id="@item.Id" class="btn btn-danger delete-dialog-window">Anular</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
