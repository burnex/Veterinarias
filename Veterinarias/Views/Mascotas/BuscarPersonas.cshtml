@model IEnumerable<Veterinarias.Modelos.Personas>

<div class="ibox-content">
    <br />
    <form class="form-inline" method="post">
        <div class="p-l-35">
            <input class="form-control input-sm" type="text" name="persona" id="parametroBusqueda" placeholder="Buscar persona..." style="width:250px;" />
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a onclick="onclickBuscarPersonas();" id="boton" class="btn btn-success  add2-dialog-window">Buscar</a> <!-- Botón de búsqueda -->
        </div>
    </form>
    <br />
    @if (Model.Count() != 0) //Si existen registros en el modelo de datos
    {
        <div class="table-responsive table-sm table-hover" style="max-height:500px !important; overflow-y:scroll">
            <table id="tablaBuscarPersona" class="table table-hover">
                <thead>
                    <tr>
                        <th hidden>Id</th>
                        <th>Tipo Documento</th>
                        <th>Número</th>
                        <th>Nombre</th>
                    </tr>
                </thead>
                <tbody class="table-bordered">
                    @foreach (var item in Model) //Recorremos los registros del modelo de datos
                    {
                        <tr>
                            <td hidden>@item.Id</td>
                            <td>@item.TipoDocumento</td>
                            <td>@item.NumeroDocumento</td>
                            <td>@item.Nombres</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a onclick="GuardarE3()" class="btn btn-danger btn-block ">Guardar</a> //Botón de guardado
    }
    <div class="alert alert-warning" style="display:@ViewBag.styleE">
        No se encontraron registros.
    </div>
</div>