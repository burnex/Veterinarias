@model Veterinarias.Modelos.Razas

<div class="ibox-content">
    <form method="post" asp-action="Create" asp-route-idAnimal="@ViewBag.IdAnimal">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="IdAnimal" class="form-control" value="@ViewBag.IdAnimal" hidden />
            <div class="col col-sm-12">
                <div class="form-group">
                    <div class="input text">
                        @*crear un cuadro de texto donde se rellenaran los siguientes datos*@
                        <div class="form-group">
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-sm-12 text-right">
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>
